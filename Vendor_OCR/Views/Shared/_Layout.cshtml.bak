@using Microsoft.AspNetCore.Http
@using Vendor_OCR.Repositories
@inject IHttpContextAccessor HttpContextAccessor
@inject VendorRepository VendorRepo

@{
    var Vendor_Name = HttpContextAccessor.HttpContext?.Session.GetString("Vendor_Name");
    var role = HttpContextAccessor.HttpContext?.Session.GetString("user_type");
    var Flag = HttpContextAccessor.HttpContext?.Session.GetString("Flag");
    var isLoggedIn = !string.IsNullOrEmpty(Vendor_Name);

    var menuItems = !string.IsNullOrEmpty(role)
        ? VendorRepo.GetMenuForRole(role)
        : new List<Vendor_OCR.Models.Menu>();
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Vendor_OCR</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" />
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>


        #wrapper {
            padding-top: 0 !important;
        }


        #sidebar {
            margin-top: 60px;
            height: calc(100vh - 60px);
            overflow-y: auto;
        }

        html, body {
            height: 100%;
            margin: 0;
            background-color: #f5f6fa;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        /* Top Bar */
        .topbar {
            height: 60px;
            background: white;
            border-bottom: 1px solid #ddd;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 1rem;
            position: fixed;
            width: 100%;
            z-index: 1000;
        }

        .logo img {
            height: 45px;
            transition: 0.3s;
        }

        .hamburger {
            font-size: 1.5rem;
            background: none;
            border: none;
            margin-left: 10px;
        }

        /* Wrapper */
        #wrapper {
            display: flex;
            height: 100%;
            padding-top: 30px;
        }

        /* Sidebar */
        #sidebar {
            width: 250px;
            background: #1e1e2f;
            color: white;
            transition: width 0.3s ease;
            overflow: visible;
            position: relative;
            z-index: 999;
        }

            #sidebar.collapsed {
                width: 70px;
            }

            #sidebar ul.nav {
                list-style: none;
                margin: 0;
                padding: 0;
            }

            #sidebar .nav-item > a {
                display: flex;
                align-items: center;
                color: white;
                padding: 0.75rem 1rem;
                text-decoration: none;
                cursor: pointer;
                transition: background 0.3s ease;
                position: relative;
            }

                #sidebar .nav-item > a:hover {
                    background: #34344a;
                }

            #sidebar .link-text {
                margin-left: 0.75rem;
                white-space: nowrap;
                flex-grow: 1;
            }

            #sidebar .arrow {
                margin-left: 0.5rem; /* Changed from auto to 0.5rem */
                transition: transform 0.3s ease;
                font-size: 0.8rem; /* Smaller arrow */
            }

            #sidebar .nav-item.expanded > a .arrow {
                transform: rotate(90deg);
            }

            #sidebar .nav-item > ul {
                list-style: none;
                padding-left: 1.5rem;
                margin: 0;
                display: none;
            }

            #sidebar .nav-item.expanded > ul {
                display: block;
            }

            /* Collapsed Mode */
            #sidebar.collapsed .link-text,
            #sidebar.collapsed .arrow {
                display: none;
            }

            #sidebar.collapsed .nav-item {
                position: relative;
            }

                #sidebar.collapsed .nav-item ul {
                    display: none;
                    position: absolute;
                    left: 70px;
                    top: 0;
                    background: #1e1e2f;
                    width: 220px;
                    padding: 0.5rem 0;
                    border-radius: 0 6px 6px 0;
                    box-shadow: 2px 0 10px rgba(0, 0, 0, 0.2);
                    z-index: 1001;
                }

                #sidebar.collapsed .nav-item:hover ul {
                    display: block;
                }

            /* Submenu Items */
            #sidebar ul ul li a {
                display: block;
                color: white;
                text-decoration: none;
                padding: 0.5rem 1rem;
                transition: background 0.3s;
            }

                #sidebar ul ul li a:hover {
                    background: #505068;
                }

        /* Main Content */
        #mainContent {
            padding-top: 20px !important;
            flex-grow: 1;
            overflow-y: auto;
            background: #f5f6fa;
            transition: margin-left 0.3s;
        }

        #sidebar i.bi {
            font-size: 1.1rem;
        }
        /* Enable hover opening, but DO NOT hide when mouse leaves the trigger */
        @@media (hover: hover) {
            .hover-dropdown:hover .dropdown-menu {
                display: block;
            }
        }

        /* Prevent menu from closing while hovering the menu itself */
        .hover-dropdown .dropdown-menu:hover {
            display: block;
        }

        /* Bootstrap will keep it open on click because JS adds .show */
        .hover-dropdown .dropdown-menu.show {
            display: block;
        }

    </style>
</head>

<body>
    <!-- Top Bar -->
    <div class="topbar">
        <div class="d-flex align-items-center">
            <div class="logo">
                <img src="~/logo/logo-2.png" alt="Logo" id="mainLogo" />
            </div>
            <button class="hamburger" id="toggleSidebar"><i class="bi bi-list"></i></button>
        </div>

        <div class="user-info d-flex align-items-center position-relative">
            <i class="bi bi-person-circle me-2"></i>

            @if (isLoggedIn)
            {
                <div class="dropdown hover-dropdown">
                    <a class="dropdown-toggle text-decoration-none fw-semibold" href="#" role="button"
                       data-bs-toggle="dropdown" aria-expanded="false">
                        @Vendor_Name
                    </a>

                    <ul class="dropdown-menu dropdown-menu-end">
                        <li>
                            <form method="post" asp-controller="Login" asp-action="Logout" class="m-0" id="logoutForm">
                                <button type="submit" class="dropdown-item text-danger d-flex align-items-center">
                                    <i class="bi bi-box-arrow-right me-2"></i> Logout
                                </button>
                            </form>

                        </li>
                    </ul>
                </div>
            }
        </div>



    </div>

    <div id="wrapper">
        <nav id="sidebar">
            <ul class="nav flex-column">
                @foreach (var item in menuItems)
                {
                    bool isDefaultOpen = item.Title == "Vendor";

                    if (item.Children.Any())
                    {
                        <li class="nav-item @(isDefaultOpen ? "expanded" : "")">
                            <a>
                                <div class="d-flex align-items-center w-100">
                                    <i class="@item.Icon"></i>
                                    <span class="link-text">@item.Title</span>
                                    <i class="bi bi-chevron-right arrow"></i>
                                </div>
                            </a>
                            <ul class="nav flex-column">
                                @foreach (var child in item.Children)
                                {
                                    if (Flag == "1" && @child.Title != "Register")
                                    {
                                        <li>
                                            <a asp-controller="@child.Controller" asp-action="@child.Action">
                                                <i class="@child.Icon me-2"></i>@child.Title
                                            </a>
                                        </li>
                                    }
                                    else if (Flag == "0" && @child.Title == "Register")
                                    {
                                        <li>
                                            <a asp-controller="@child.Controller" asp-action="@child.Action">
                                                <i class="@child.Icon me-2"></i>@child.Title
                                            </a>
                                        </li>

                                    }
                                    else if
                                    (role != "2")
                                    {
                                        <li>
                                            <a asp-controller="@child.Controller" asp-action="@child.Action">
                                                <i class="@child.Icon me-2"></i>@child.Title
                                            </a>
                                        </li>
                                    }
                                }
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a asp-controller="@item.Controller" asp-action="@item.Action">
                                <i class="@item.Icon"></i>
                                <span class="link-text">@item.Title</span>
                            </a>
                        </li>
                    }
                }
            </ul>
        </nav>

        <main id="mainContent">
            @RenderBody()
        </main>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>
        const sidebar = document.getElementById("sidebar");
        const toggleBtn = document.getElementById("toggleSidebar");
        const mainLogo = document.getElementById("mainLogo");
        const logoutForm = document.getElementById("logoutForm");

        const expandedLogo = '@Url.Content("~/logo/logo-2.png")';
        const collapsedLogo = '@Url.Content("~/logo/sapphire-logo.png")';

        // Sidebar toggle
        toggleBtn.addEventListener("click", () => {
            sidebar.classList.toggle("collapsed");
            mainLogo.src = sidebar.classList.contains("collapsed") ? collapsedLogo : expandedLogo;
        });

        // Sidebar menu click - only expand when sidebar is open
        document.querySelectorAll('#sidebar .nav-item > a').forEach(a => {
            a.addEventListener('click', e => {
                const parent = a.parentElement;
                const isCollapsed = sidebar.classList.contains("collapsed");

                if (isCollapsed) {
                    e.preventDefault();
                    return;
                }

                if (parent.querySelector('ul')) {
                    e.preventDefault();
                    parent.classList.toggle('expanded');
                }
            });
        });

        document.querySelectorAll('#sidebar.collapsed .nav-item').forEach((item, index) => {
            item.addEventListener('mouseenter', function() {
                const submenu = this.querySelector('ul');
                if (submenu) {
                    submenu.style.top = (index * 48) + 'px';
                }
            });
        });


        if (logoutForm) {
            logoutForm.addEventListener('submit', function (e) {
                e.preventDefault();

                const form = this;

                Swal.fire({
                    title: 'Are you sure?',
                    text: "You want to logout from the system!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, logout!',
                    cancelButtonText: 'Cancel'
                }).then((result) => {
                    if (result.isConfirmed) {
                        form.submit();
                    }
                });
            });
        }

    </script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @if (TempData["SweetAlertIcon"] != null)
    {
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                Swal.fire({
                    icon: '@TempData["SweetAlertIcon"]',
                    title: '@TempData["SweetAlertTitle"]',
                    text: '@TempData["SweetAlertMessage"]',
                    timer: 3000,
                    showConfirmButton: false,
                    timerProgressBar: true
                });
            });
        </script>
    }


    @if (IsSectionDefined("Scripts"))
    {
        @RenderSection("Scripts", required: false)
    }
</body>
</html>